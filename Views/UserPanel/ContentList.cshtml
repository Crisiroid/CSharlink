@model IEnumerable<Csharlink.Models.Post>
@{
    ViewBag.Title = "Content List";
}

<h2>Your Contents</h2>
<table class="table table-striped table-bordered">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Body</th>
        <th>Views</th>
        <th>Action</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Body</td>
                    <td>@item.Views</td>
                    <td>
                        <a class="btn btn-danger" href="/UserPanel/DeleteContent/@item.Id">Delete Content</a>
                        <a class="btn btn-info" href="/UsePanel/EditContent/@item.Id">Edit Content</a>
                    </td>
                </tr>
            }
</table>
